.header-img{
    width:100%;
    height:375rpx;
    display: block;
}
.section_detail {
    width: 100%;
    padding: 0 20rpx 30rpx;
    font-size: 14px;
    box-sizing: border-box;
}
.section_detail .article-title {
    width: 100%;
    display: inline-block;
    text-align: left;
    font-size: 17px;
    font-weight: 400;
    color: #2f323b;
    margin-top: 20rpx;
}
.article-text{
    width: 100%;
    color: #555;
    margin-top: 20rpx;
    text-align: left;
    display: block;
}
.article-img{
    width:100%;
    display: block;  
    margin-top:20rpx;
}
.section_detail_shoplink{
    margin-bottom: 15rpx;
    margin-top: 30rpx;
}
.shoplink-goods-des {
    border-radius: 8rpx;
    height: 200rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
    background-color: #F6F6F6;
    position: relative;
    box-sizing: border-box;
}
.shoplink-goods-des .shoplink_img {
    width: 160rpx;
    height: 160rpx;
    float: left;
    display: block;
}
.shoplink_des {
    margin-left: 180rpx;
    padding-right: 90rpx;
}
.shoplink_des_title {
    font-size: 15px;
    font-weight: normal;
    color: #555;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;
    overflow: hidden;
    margin-top: 20rpx;
    display: block;
}
.shoplink_price {
    position: absolute;
    bottom: 40rpx;
    font-weight: bold;
}
.shoplink_btn{
    position: absolute;
    color: #555;
    top: 50%;
    margin-top: - 6px;
    right: 20rpx;
    width: 13px;
    height: 8px;
    border: 1px solid #ff5777;
    transform: rotate(-90deg) scale(1.2);
    -webkit-transform: rotate(90deg) scale(1.2);
}
.shoplink-goods-link {
    height: 60rpx;
    padding: 15rpx 0;
    margin-top: 1px;
    background-color: #F6F6F6;
    border-radius: 8rpx;
}
.shoplink-goods-link view {
    float: left;
    width: 50%;
    text-align: center;
    position: relative;
    color: #555;
    line-height: 60rpx;
    font-size: 14px;
}
.shoplink-like{
    box-sizing: border-box;
    border-right:1px solid #fff;
}
.shoplink-goods-link image {
    display: inline-block;
    width: 17px;
    height: 17px;
    margin-right: 0.2rem;
    vertical-align: middle;
    border:1px solid #ff5777;
}
.also-like{
    width: 100%;
    padding:0 20rpx;
    box-sizing: border-box;
}
.also-like-title{
    width:100%;
    height:80rpx;
    font-size:14px;
    color:#333;
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
}
.also-like-title text{
    padding:0 20rpx;
    height:80rpx;
    line-height:80rpx;
    position: absolute;
    top:0rpx;
    left:50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    background-color:#fff;
    
}
.line{
    width:100%;
    height: 1px;
    background-color:#dedede;
    margin-top:40rpx;
}
.inner{
    display:flex;
    flex-direction:row;
    height:250rpx;
    margin:20rpx 0;
}
.sv-like-item{
    width:400rpx;
    height:250rpx;
    margin-right:20rpx;  
    display:flex;
    flex-direction:column;
    position: relative;
}
.sv-like-item image{
    width: 100%;
    height: 100%;
}
.sv-like-item text{
    position: absolute;
    bottom:0;
    left:0;
    font-size: 14px;
    color:#fff;
    text-indent: 10rpx;
    width:100%;
    height: 50rpx;
    line-height: 50rpx;
    white-space:nowrap; 
	text-overflow:ellipsis; -o-text-overflow:ellipsis; 
	overflow:hidden;
    background: rgba(0,0,0,0.2);
}