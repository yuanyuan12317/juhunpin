/* 清理浮动 */
.fixed:after {
visibility:hidden;
display:block;
font-size:0;
content:" ";
clear:both;
height:0;
}
.fixed {
zoom:1; /* for IE6 IE7 */
}
.classify-search {
    background-color: #fff;
    width: 100%;
    height: 100rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #dedede;
    box-sizing: border-box;
    overflow: hidden;
    position: fixed;
    top:0;
    left:0;
}
.classify-search input {
    width: 100%;
    height: 60rpx;
    line-height: 70rpx;
    background-color: #dadada;
    box-sizing: border-box;
    padding-left:60rpx;
    border-radius: 60rpx;
    margin-top: 20rpx;
    border: none;

}
.classify-search icon{
    position: absolute;
    top:35rpx;
    left:30rpx;
}
.classify-box{
    padding-top:100rpx;
}
.classify-item {
    background-color: #fff;
    padding-left: 20rpx;
    margin-bottom: 20rpx;
}
.classify-item text {
    padding-left: 30rpx;
    line-height: 80rpx;
    color: #999;
}
.classify-item image {
    width: 345rpx;
    height: 160rpx;
    display: block;
    margin:0 20rpx 20rpx 0;
    float: left;
    box-sizing: border-box;
}