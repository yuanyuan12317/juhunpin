<view class="container">  
  <view class="usermotto">  
    <text class="user-motto">欢迎注册<text style="color:#ff5777;">聚婚品</text></text>
    <label for="">
        <text>手 机 号：</text>
        <input class="inputForm" type="text" bindinput="userNameInput" placeholder="请输入用户名"/>  
    </label>
    <label for="">
        <text>设置密码：</text>  
        <input type="text" bindinput="userPasswordInput" password="true" placeholder="请输入密码"/>  
    </label>
    <label for="">
        <text>确认密码：</text>  
        <input type="text" bindinput="userpwd" password="true" placeholder="请再次输入密码"/>  
    </label>
    <label for="">  
        <input type="text" style="width:300rpx" bindinput="userPasswordInput" password="true" placeholder="请输入验证码"/>  
        <button class="getVer" bindtap="verification">获取验证码</button> 
    </label>
    <button bindtap="logIn">注　册</button>  
  </view>  
</view>  