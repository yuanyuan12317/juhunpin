.goods_pic{
	background-color:#f5f5f5; 
	padding-bottom:20rpx;
}
.goods_slider swiper{
	width: 100%;
	height: 750rpx;
}
.goods_slider image{
	width:100%;
	height: 750rpx;
}
.goods_detail{
	padding:0 20rpx 0;
	font-size: 14px;
	background-color: #fff;
}
.goods_detail .goods_detail_tit {
	line-height: 60rpx;
}
.goods_price_now{
	float:left;
	color:#ff5777;
}
.goods_likeP{
	float:right;
}
.goods_des{
	color:#999;
	display: block;
	padding:20rpx 0;
}
.goods-footer{
	width: 100%;
	height:100rpx;
	position: fixed;
	bottom:0;
	left:0;
	box-shadow: 0 -1px 1px rgba(0, 0, 0, 0.1);
	display: flex;
	flex-direction :row;
	background-color: #fff;
	z-index: 99;
	font-size: 15px;
}
.goods-like{
	flex: 1;
	width: 50%;
	text-align: center;
	display: flex;
	flex-direction: column;

}
.goods-like image{
	width: 40rpx;
	height: 40rpx;
	flex:1;
	display: block;
	margin:10rpx auto 0;

}
.goods-like text{
	flex:1;
	line-height: 50rpx;
}
.goods-link{
	flex:1;
	background-color: #ff5777;
	color:#fff;
	text-align: center;
	line-height: 100rpx;
}