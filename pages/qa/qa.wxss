.an-voice {
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  z-index: 697; }

.an-voice image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx; }

.an-audio-time {
  color: #999; }

.list-own {
  float: right;
  color: #bcbcbc; }
  .list-own i {
    font-style: normal;
    font-size: 15px;
    color: #666; }

.list-tag {
  padding: 6rpx 8rpx;
  background-color: #F9C542;
  color: #fff;
  border-radius: 8rpx;
  margin-left: 20rpx; }

.qu-title {
  display: block;
  line-height: 62rpx;
  color: #000;
  font-size: 16px;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden; }

.qu-text {
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical; }

