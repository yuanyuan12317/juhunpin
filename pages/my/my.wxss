.user-header {
  width: 100%;
  height: 315rpx;
  font-size: 13px;
  background-color: #FA2B5C;
  color: #fff;
  position: relative;
  overflow: hidden; }
  .user-header .user-tools {
    margin-top: 30rpx;
    padding: 0 25rpx; }
    .user-header .user-tools .user-setting {
      float: left;
      width: 44rpx;
      height: 41rpx; 
      margin-top: -10rpx;
    }
    .user-header .user-tools .user-dialogue {
      float: right; }
  .user-header .user-info navigator {
    width: 136rpx;
    height: 136rpx;
    display: block;
    margin: 70rpx auto 10rpx; }
  .user-header .user-info image {
    width: 136rpx;
    height: 136rpx;
    border-radius: 136rpx;
    display: block; }
  .user-header .user-info text {
    display: block;
    text-align: center; 
    margin-top:12rpx; 
  }

 .user-module {
  width: 100%;
  height:188rpx;
  background-color: #fff; }
  .user-module view {
    width: 100%; }
    .user-module navigator  {
      float: left;
      width: 33.33%; }
      .user-module image {
        display: block;
        width: 88rpx;
        height: 88rpx;
        margin: 25rpx auto 0; }
      .user-module text {
        margin-top: 20rpx;
        display: block;
        text-align: center;
        color: #6e6e6e; 
        font-size: 14px;
      } 

.user-collect {
  margin-top: 20rpx; }
  .user-collect .user-collect-title {
    height: 96rpx;
    background-color: #fff;
    font-size: 14px;
    border-bottom: 1px solid #DADADA;
    border-top: 1px solid #DADADA; }
    .user-collect .user-collect-title view {
      width: 50%;
      height: 100%;
      float: left;
      line-height: 96rpx;
      text-align: center; 
      box-sizing: border-box;
    }
      .user-collect .user-collect-title view.on {
        border-bottom: 4px solid #FF2D47; }

.index-tab {
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 10;
  background-color: #f5f5f5;
  font-size: 14px;
  overflow-x: auto; }
  [data-dpr="2"] .index-tab {
    font-size: 28px; }
  [data-dpr="3"] .index-tab {
    font-size: 42px; }
  .index-tab ul {
    width: 600%; }
    .index-tab ul li {
      float: left;
      padding: 0 20rpx;
      height: 81rpx;
      text-align: center;
      line-height: 81rpx; }
      .index-tab ul li.on {
        color: #FA2B5C;
        border-bottom: 3px solid #FA2B5C; }
