/* 清理浮动 */
.fixed:after {
visibility:hidden;
display:block;
font-size:0;
content:" ";
clear:both;
height:0;
}
.fixed {
zoom:1; /* for IE6 IE7 */
}

.slider swiper{
	height:350rpx;
} 
.slider .slide-image{
	width:100%;
	height:100%}
.dayNews{
	width:100%;
	height:100rpx;
	padding:15rpx;
	background-color:#f5f5f5;
	box-sizing: border-box;
}
.dayNews-box{
	background-color: #fff;
	width:100%;
	height:100%;
	position: relative;
	box-sizing: border-box;
	font-size:14px;

}
.dayNews-box .dayNews-slider{
	width:100%;
	height: 100%;
	box-sizing: border-box;
}
.dayNews .dayNews-text{
	width:100%;
	height: 70rpx;
	line-height: 70rpx;
    white-space:nowrap; 
	text-overflow:ellipsis; -o-text-overflow:ellipsis; 
	overflow:hidden;
	padding-left:160rpx;
	display:block;
	box-sizing:border-box;
	color: #999;
}
.dayNews-title{
	position: absolute;
	top:20rpx;
	left:0;
	padding:0 15rpx;
	color:#ff5777;
	font-weight: blod;
	border-right:1px solid #ff5777;
}
.active{
	width:100%;
	height:600rpx;
}
.active-image{
	width:450rpx;
	height:300rpx;
	float:left;	
	box-sizing: border-box;
}
.active-image:first-child{
	width:300rpx;
	height:600rpx;
	float:left;
	border-right:1px solid #999;

}
.active-image:last-child{
	border-top:1px solid #999;
}
.yx{
	background-color:#f5f5f5;
	font-size:14px;
	color:#666;
}

.yx .yx-list{
	width:50%;
	float:left;
	background-color:#fff;
}
.yx-list image{
	width:240rpx;
	height: 240rpx;
	display: block;
	margin:0 auto 20rpx;
	border-radius:8rpx;
}
.yx-title{
	display: block;
	margin:0 auto;
	text-align: center;
}
.yx-price{
	text-align: center;
	display: block;
	margin:10rpx auto 20rpx;
	color:#ff5777;
}

