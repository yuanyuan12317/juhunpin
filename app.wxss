
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
} 
/* 清理浮动 */
.fixed:after {
visibility:hidden;
display:block;
font-size:0;
content:" ";
clear:both;
height:0;
}
.fixed {
zoom:1; /* for IE6 IE7 */
}
 .index-title{
	width:100%;
	height:80rpx;
	text-align: center;
	background-color:#fff;
	display: block;
	line-height: 80rpx;
}

.xh{
	background-color:#f5f5f5;
	color:#666;
	font-size:14px;
}
.xh-box{
	padding-left: 20rpx;
	box-sizing: border-box;
	padding-bottom:20rpx;
}
.xh-list{
	width:350rpx;
	float:left;
	box-sizing: border-box;
	margin-top:10rpx;
	background-color:#fff;
	margin-right:10rpx;
	box-shadow: 2rpx 5rpx 3rpx #dedede;

}
.xh-list image{
	width:350rpx;
	height:350rpx;
	box-sizing: border-box;
}
.xh-title{
	padding-left:30rpx;
	display: block;
	margin:20rpx auto 0;
	width:100%;
    white-space:nowrap; 
	text-overflow:ellipsis; -o-text-overflow:ellipsis; 
	overflow:hidden;
	box-sizing: border-box;
}
.xh-price{
	padding-left:30rpx;
	display: block;
	margin:40rpx auto 20rpx;
	color:#ff5777;
}


.gl{
	background-color:#f5f5f5;
	font-size:14px;
	padding-top:20rpx;
	color:#666;
}
.gl-list{
	padding-bottom:20rpx;
}
.gl .index-title{
	border-bottom:1px solid #dedede;
}
.gl-list .article-header{
	width: 100%;
    height: 80rpx;
    padding:0 30rpx;
    color: #999;
	background-color:#fff;
	box-sizing: border-box;
}
 .article-classify {
    float: left;
    font-size: 14px;
    position: relative;
	line-height: 80rpx;
}
.label {
    display: inline-block;
    color: #F63C64;
    background-color: #FEECED;
    font-size: 12px;
    height: 45rpx;
    line-height: 45rpx;
    border-radius: 8rpx;
    padding: 0 20rpx;
    margin-right: 20rpx;
    text-align: center;
	margin-top:17rpx;
}
 .article-author {
    float: right;
    position: relative;
	height: 100%;
}
.avatar {
    height: 45rpx;
    width: 45rpx;
    border-radius:45rpx;
    margin-right: 10rpx;
    position: absolute;
    top: 20rpx;
    left: -55rpx;
}
.nickname {
    display: inline-block;
    color: #999;
    font-size: 12px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
	line-height: 80rpx;
	height: 100%;
}
.article-image{
	width: 100%;
	height:320rpx;
	display: block;
}
.article-title{
	width:100%;
	height: 60rpx;
	display: block;
	padding:0 130rpx 0 30rpx;
	box-sizing: border-box;
	position: relative;
	background-color: #fff;
}
.article-title-text{
	display: block;
	width:100%;
	height: 60rpx;
	line-height: 60rpx;	
    white-space:nowrap; 
	text-overflow:ellipsis; -o-text-overflow:ellipsis; 
	overflow:hidden;
}
.shoplink-like{
	position: absolute;
	top:10rpx;
	right:30rpx;
}
.shoplink-heart{
	width:40rpx;
	height:40rpx;
	vertical-align: middle;
	margin-right:10rpx;
}



.choose-title{
	position: fixed;
	top:0;
	left:0;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	background-color: #f5f5f5;
	display: relative;
	border-top:1px solid #999;
	font-size: 15px;
	z-index: 99;
}
.choose-title text.on{
	color: #ff5777;
}
navigator{
	display: inline;
}
.search{
	position: absolute;
	top: 15rpx;
	right: 30rpx;
}
.header-img{
	width: 100%;
	height:320rpx;
	display: block;
	padding-top:80rpx;
}